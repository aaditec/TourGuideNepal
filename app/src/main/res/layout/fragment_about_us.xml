<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b87b0"
    android:padding="10dp"
    tools:context=".fragments.AboutUsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/about1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/splashlogo" />

                    <TextView
                        android:id="@+id/about2"
                        android:layout_marginTop="20dp"
                        android:text="Tour Guide Nepal"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/about1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/about3"
                    android:text="Travelling, Booking and Camping"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_below="@+id/about1"
                    android:layout_toEndOf="@id/about2"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/about3"
                    android:layout_toEndOf="@id/about2"
                    android:text="@string/about31"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:id="@+id/about4"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:layout_below="@+id/about1"
                        android:layout_toLeftOf="@+id/about3"
                        android:alpha=".9"
                        android:src="@drawable/abouttopimage" />

                    <TextView
                        android:id="@+id/about5"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:text="About us"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:layout_below="@+id/about4"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/about6"
                        android:layout_below="@+id/about5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_us"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:id="@+id/about7"
                        android:layout_below="@+id/about6"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Encoders"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

               <androidx.viewpager2.widget.ViewPager2
                   android:id="@+id/viewPager_ImageSlider"
                   android:layout_below="@+id/about7"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingStart="70dp"
                   android:paddingEnd="70dp"/>


            </RelativeLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
