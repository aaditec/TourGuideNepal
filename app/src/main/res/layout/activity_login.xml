<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/everest"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/tourlogo"
        android:layout_width="390dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:alpha=".9"
        android:src="@drawable/secondlogo"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="311dp"
        android:backgroundTint="#f1f5eb"
        app:cardElevation="100dp"
        app:cardCornerRadius="50dp"
        android:alpha=".9"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">




    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/inputname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/person"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtname"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/inputpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Password"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/lock"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtpass"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/saveuser"
                            android:text="Remember me"
                            android:layout_marginLeft="30dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/forgotpass"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginLeft="97dp"
                    android:text="Forgot Password?"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"

        app:layout_constraintTop_toBottomOf="@+id/saveuser"
        app:layout_constraintStart_toStartOf="@+id/saveuser"
        app:layout_constraintEnd_toEndOf="@+id/forgotpass"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnlogin"
            android:text="login"
            android:textSize="16dp"
            app:backgroundTint="#08a896"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Continue with:"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/gogole"
                android:layout_gravity="center_horizontal"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facebook"
                android:layout_gravity="center_horizontal"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/insta"
                android:layout_gravity="center_horizontal"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>


    </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Don't have an account?"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Sign Up"
            android:id="@+id/linkregister"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>

