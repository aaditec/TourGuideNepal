<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moodchange"
    tools:context=".Signup">


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/tourlogo"
                android:src="@drawable/tourlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/newinputname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New username"
        app:helperText="Required"
        app:helperTextTextColor="@color/design_default_color_primary_dark"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/person"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toBottomOf="@+id/tourlogo"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtnewname"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/newinputemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your email"
        app:helperText="Required"
        app:helperTextTextColor="@color/design_default_color_primary_dark"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/email"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"

        app:layout_constraintTop_toTopOf="@+id/newinputname"
        app:layout_constraintEnd_toEndOf="@+id/newinputname"
        app:layout_constraintStart_toStartOf="@+id/newinputname"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtnewemail"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/newinputpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" New Password"
        app:helperText="Required"
        app:helperTextTextColor="@color/design_default_color_primary_dark"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/lock"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"

        app:layout_constraintTop_toTopOf="@+id/newinputemail"
        app:layout_constraintEnd_toEndOf="@+id/newinputemail"
        app:layout_constraintStart_toStartOf="@+id/newinputemail"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtnewpass"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/newinputconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        app:helperText="Required"
        app:helperTextTextColor="@color/design_default_color_primary_dark"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/lock"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"

        app:layout_constraintTop_toTopOf="@+id/newinputpass"
        app:layout_constraintEnd_toEndOf="@+id/newinputpass"
        app:layout_constraintStart_toStartOf="@+id/newinputpass"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtnewconfirm"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnsignup"
        android:text="create an account"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintStart_toStartOf="@+id/newinputconfirm"
        app:layout_constraintTop_toBottomOf="@+id/newinputconfirm"
        app:layout_constraintEnd_toEndOf="@+id/newinputconfirm"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/btnsignup"
        app:layout_constraintStart_toStartOf="@id/btnsignup"
        app:layout_constraintEnd_toEndOf="@id/btnsignup"
        tools:ignore="MissingConstraints">

        <TextView
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Sign In"
            android:id="@+id/linklogin"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>